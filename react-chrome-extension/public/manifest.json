{
  "name": "Fluidy Screen Recorder",
  "description": "Extension pour enregistrer écran, onglet ou caméra avec Fluidy — version React + Vite + Tailwind.",
  "version": "1.0.0",
  "manifest_version": 3,
  "minimum_chrome_version": "116",

  "action": {
    "default_title": "Fluidy Screen Recorder",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/not-recording.png",
      "32": "icons/not-recording.png"
    }
  },

  "icons": {
    "16": "icons/not-recording.png",
    "32": "icons/not-recording.png",
    "48": "icons/not-recording.png",
    "128": "icons/not-recording.png"
  },

  "permissions": [
    "tabCapture",
    "desktopCapture",
    "storage",
    "scripting",
    "offscreen",
    "tabs",
    "activeTab"
  ],

  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],

  "background": {
    "service_worker": "src/background/service-worker.js",
    "type": "module"
  },

  "web_accessible_resources": [
    {
      "resources": [
        "desktopRecord.html",
        "camera.html",
        "video.html",
        "popup.html",
        "icons/*.png"
      ],
      "matches": ["<all_urls>"]
    }
  ],

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/cameraContent.js"]
    }
  ],

  "offscreen_pages": [
    "offscreen.html"
  ]
}
