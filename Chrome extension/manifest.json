{
    "name" : "FLuidy Screen Recorder",
    "description" : "Extension qui permet de recorder l'écran et la caméra de l'utilisateur, ceci est inscrit dans le projet entreprise de Fluidy",
    "version" : "1",
    "manifest_version" : 3,
    "minimum_chrome_version" : "116",
    "action" : {
        "default_icon" : {
            "16" : "assets/logo-fluidy.png",
            "32" : "assets/logo-fluidy.png"
        },
        "default_popup" : "popup.html"
    },
    "host_permissions": ["https://*/*", "http://*/*"],
    "background" : {
        "service_worker" : "service-worker.js"
    },
    "permissions" : [
        "tabCapture",
        "offscreen",
        "scripting",
        "storage",
        "tabs", 
        "activeTab",
        "desktopCapture"
    ],    
    "web_accessible_resources": [
        {
            "resources": [ "desktopRecord.html", "desktopRecord.js", "camera.html", "camera.js", "video.html", "video.js" ],
            "matches": ["<all_urls>"]
        }
    ]
}

