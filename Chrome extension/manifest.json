{
    "name" : "FLuidy Screen Recorder",
    "descirption" : "Extension qui permet de recorder l'écran et la caméra de l'utilisateur, ceci est inscrit dans le projet entreprise de Fluidy",
    "version" : "1",
    "manifest_version" : "3",
    "minimum_chrome_version" : "116",
    "action" : {
        "default_icon" : {
            "16" : "icons/not-recording.png",
            "32" : "icons/not-recording.png"
        },
        "default_popup" : "popup.html"
    },
    "host_permissions": ["https//*/*", "http//*/*"],
    "background" : {
        "service_worker" : "service-worker.js"
    },
    "permissions" : [
        "tabCapture",
        "offscreen",
        "scripting",
        "storage",
        "desktopCapture",
        "tabs"
    ],
    "web_accessible_ressources" : [
        {
            "ressources" : ["camera.html", "camera.js", "video.html", "video.js"],
            "matches" : ["https://*/*", "http://*/*"]
        }
    ] 
}